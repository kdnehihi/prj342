<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="StatusController">
   <children>
      <HBox alignment="CENTER" spacing="10" styleClass="header-box">
         <children>
            <Label text="Server Status" styleClass="title-label" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="stopButton" mnemonicParsing="false" onAction="#handleStopServer" text="Stop Server" styleClass="danger-button" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
      <ListView fx:id="logListView" VBox.vgrow="ALWAYS" />
   </children>
</VBox>

